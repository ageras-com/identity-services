{
  "name": "monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint --",
    "format": "turbo run format",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "turbo": "2.5.2",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "3.4.2"
  }
}
