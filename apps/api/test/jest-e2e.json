{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@identity-services/common(|/.*)$": "<rootDir>/../../../libs/common/src$1"
  },
  "roots": ["<rootDir>/", "<rootDir>/../../../"]
}
